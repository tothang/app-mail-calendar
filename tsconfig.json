{
  "$schema": "https://json.schemastore.org/tsconfig",
  "_version": "2.0.0",

  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "es2019"],
    "isolatedModules": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "target": "es2019",
    "strict": true,
    "allowJs": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@/*": ["./src/*"]
    },
    "baseUrl": "."
  },
  "include": ["src"]
}
